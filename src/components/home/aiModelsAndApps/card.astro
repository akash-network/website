---
import ButtonLink from "@/components/ui/button-link.astro";
import { Image } from "astro:assets";
import { ArrowUpRight } from "lucide-react";
const { card } = Astro.props;
const isPNG = card.image.src.includes(".png");
---

<div class="flex flex-col overflow-hidden rounded-lg border bg-background2">
  <div
    class="flex h-44 items-center justify-center border-b bg-black dark:bg-transparent"
  >
    {
      isPNG ? (
        <Image
          src={card.image}
          alt={card.title}
          class={"h-full w-full object-cover"}
        />
      ) : (
        <Image
          src={card.image}
          alt={card.title}
          class={"h-10 object-contain"}
        />
      )
    }
  </div>
  <div class="flex flex-1 flex-col gap-2 px-4 py-5 md:gap-4 md:px-5">
    <div class="flex flex-1 flex-col gap-2">
      <h3 class="text-lg font-medium">{card.title}</h3>
      <p class="text-muted-foreground text-sm">{card.description}</p>
    </div>
    <ButtonLink
      link={card.link}
      className=" mt-3 flex w-full gap-2 !py-3 dark:bg-[#2D2C2C]"
      variant="secondary"
    >
      {card.button}
      <ArrowUpRight className="h-4 w-4" />
    </ButtonLink>
  </div>
</div>
