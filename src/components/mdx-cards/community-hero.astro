---
import ButtonLink from "../ui/button-link.astro";
const { subTitle, title, description, buttonLabel, buttonLink, darkImage } =
  Astro.props;
---

<div
  class="not-prose mb-[80px] flex flex-col items-center justify-between gap-x-10 gap-y-6 text-center md:mb-[100px] xl:mb-[120px]"
>
  <div class="flex w-full flex-1 flex-col">
    {
      subTitle && (
        <p class="mb-2 text-base font-medium lg:text-xl">{subTitle}</p>
      )
    }
    <h1
      class="text-3xl !font-semibold md:text-4xl md:leading-snug lg:text-5xl"
      set:html={title}
    />

    {
      description && (
        <p class="mx-auto max-w-3xl pt-6  lg:text-lg">{description}</p>
      )
    }

    <ButtonLink
      link={buttonLink}
      variant="secondary"
      size="lg"
      className="mt-10"
    >
      <svg
        width="20"
        height="20"
        viewBox="0 0 20 20"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M7.64062 12.3574L12.3547 7.64331M12.3547 7.64331H8.22988M12.3547 7.64331V11.7681"
          stroke="#687076"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.9974 18.3334C14.5997 18.3334 18.3307 14.6024 18.3307 10.0001C18.3307 5.39771 14.5997 1.66675 9.9974 1.66675C5.39502 1.66675 1.66406 5.39771 1.66406 10.0001C1.66406 14.6024 5.39502 18.3334 9.9974 18.3334Z"
          stroke="#687076"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>

      {buttonLabel}
    </ButtonLink>
  </div>
</div>
