---
import { ArrowUpCircle, Youtube } from "lucide-react";
import ButtonLink from "../ui/button-link.astro";
import { acc2025 } from "./acc-2025";

const links = {
  x: "https://twitter.com/akashnet_",
  discord: "https://discord.com/invite/akash",
  youtube: "https://www.youtube.com/c/AkashNetwork",
  github: "https://github.com/akash-network",
};
---

<section class="flex flex-col lg:flex-row">
  <div class="flex w-full flex-1 items-center justify-center bg-[#0c0909]">
    <img
      src="/images/acc-2025/hero2.png"
      alt="Akash Accelerate 2025 Information"
      class="aspect-[16/13] object-contain"
    />
  </div>
  <div
    class="flex aspect-[16/15] w-full flex-1 flex-col justify-between gap-10 px-4 py-10 md:aspect-video md:px-10 lg:aspect-auto"
  >
    <div class="flex flex-col gap-7 md:gap-9">
      <h2 class="text-3xl font-semibold !leading-[1.2] md:text-4xl xl:text-5xl">
        Stay in touch about <br />
        Akash Accelerate 2025
      </h2>

      <ButtonLink
        link={acc2025.subscribe}
        variant="primary"
        size="xl"
        className=" mr-auto flex  gap-2  !rounded  !px-6 !py-2 font-jetBrainsMono font-normal tracking-wide  md:!py-3   md:text-xl "
      >
        <ArrowUpCircle className="size-5 rotate-45 md:size-6" />
        Subscribe Now
      </ButtonLink>
    </div>

    <div class="flex flex-col gap-2 md:gap-5">
      <h3 class="font-jetBrainsMono text-lg font-thin md:text-2xl">
        Connect with Akash
      </h3>
      <div class="flex gap-1.5">
        <a
          href={links.x}
          class="flex size-12 items-center justify-center rounded-full border !border-white text-white transition-all hover:bg-white hover:text-black md:size-[60px]"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            class="size-5 md:size-7"
            viewBox="0 0 34 34"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M11.6059 7H6.99982L21.3938 26H25.9998L11.6059 7Z"
              stroke="currentColor"
              stroke-width="2.4"
              stroke-linejoin="round"></path>
            <path
              d="M26.8878 7.80721C27.3336 7.31682 27.2974 6.55788 26.807 6.11207C26.3166 5.66626 25.5577 5.7024 25.1119 6.19279L26.8878 7.80721ZM25.1119 6.19279L17.8042 14.2313L19.5801 15.8457L26.8878 7.80721L25.1119 6.19279Z"
              fill="currentColor"></path>
            <path
              d="M14.3075 18.6924L7.73059 26.0001"
              stroke="currentColor"
              stroke-width="2.4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </a>
        <a
          href={links.discord}
          class="flex size-12 items-center justify-center rounded-full border !border-white text-white transition-all hover:bg-white hover:text-black md:size-[60px]"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            class="size-5 md:size-7"
            viewBox="0 0 34 34"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M8.6106 21.7227C14.8735 24.8541 18.6312 24.8541 24.8941 21.7227"
              stroke="currentColor"
              stroke-width="2.4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M21.1341 23.6097L22.3866 26.1149C22.3866 26.1149 27.6115 24.4511 29.2758 21.7308C29.2758 20.4783 29.9398 11.5266 25.5181 8.57881C23.6392 7.32624 20.5078 6.69995 20.5078 6.69995L19.2552 9.2051H16.7501"
