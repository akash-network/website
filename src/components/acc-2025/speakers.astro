---

<section
  class="container-nav-2 overflow-hidden pb-10 pt-10 md:overflow-visible md:pb-16"
>
  <div class="flex flex-col gap-10">
    <h2 class="text-3xl font-semibold lg:text-4xl 2xl:text-5xl">Speakers</h2>

    <div
      class="grid grid-cols-2 gap-x-3 gap-y-5 md:gap-x-5 md:gap-y-12 lg:grid-cols-4"
    >
      {
        speakers.map((speaker) => (
          <div class="flex flex-col gap-2 md:gap-3">
            <img
              src={speaker.image}
              alt={speaker.name}
              class=" aspect-[16/13.3] w-full bg-[#363636] object-cover"
            />
            <div class="flex flex-col gap-3">
              <p class="text-sm font-medium !leading-[1.2] text-foreground md:text-xl">
                {speaker.name}
              </p>
              <div class="flex flex-col ">
                <p class="text-xs font-medium !leading-[1.2] text-[#909090]  md:text-lg">
                  {speaker.title}
                </p>
                {speaker.company && (
                  <p
                    set:html={speaker.company}
                    class="text-xs font-medium !leading-[1.2] text-[#909090] md:text-lg"
                  />
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <a
      href={acc2025.apply}
      target="_blank"
      class="flex w-full items-center justify-center gap-2 rounded border-2 border-[#666666] px-4 py-2.5 font-jetBrainsMono text-lg font-medium transition-all hover:bg-[#666666] md:mx-auto md:mt-4 md:w-auto"
    >
      <ArrowUpCircle className="size-6 rotate-45" />
      Interested in speaking?
    </a>
  </div>
</section>
