const pathname = Astro.url.pathname;

const shouldHide = shouldHideCta(pathname);
---

<footer
  class={clsx(
    " w-full  py-12  md:pt-20 pb-10 text-white ",
    shouldHide && "border-t  mt-20",
    overrideClassName
      ? overrideClassName
      : "bg-white dark:bg-background container",
  )}
