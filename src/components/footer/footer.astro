        <div class="flex gap-5 font-[300]">
          {
            !hideDarkToggle && (
              <>
                <DarkModeToggle />
                <div class="h-7 w-[1.5px] bg-[#3B3B3B]" />
              </>
            )
          }
          {
            socials.map((social) => (
              <a
                aria-label={`Akash Network ${social.name}`}
                href={social.link}
                target="_blank"
                class="flex items-center gap-4 text-linkText hover:text-primary"
