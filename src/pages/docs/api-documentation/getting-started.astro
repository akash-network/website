---
import DocsLayout from "@/layouts/docs-layout.astro";
import { getCollection, getEntry } from "astro:content";
import MobileNav from "@/components/docs/mobile-sidebar";
import AlgoliaSearch from "@/components/docs/algolia-search";
import { generateDocsNav } from "@/lib/docs/generate-nav/docs-nav";
import SectionCard from "@/components/docs/section-card.astro";

const pathname = new URL(Astro.request.url).pathname;

const docsData = await getCollection("Docs");
const docs = generateDocsNav(docsData);

const pageTitle = "API Documentation";
const pageDescription = "Integrate Akash Network into your applications with SDKs and APIs";

// Icons
const sdkIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`;

const apiIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M9 9h.01"/><path d="M15 9h.01"/><path d="M9 15h.01"/><path d="M15 15h.01"/></svg>`;

const rocketIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.25-2 5-2 5s3.75-.5 5-2c.545-.545.93-1.19 1.17-1.87"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/></svg>`;

const bookIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>`;

const codeIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/></svg>`;

const creditCardIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg>`;

const walletIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12V7H5a2 2 0 0 1 0-4h14v4"/><path d="M3 5v14a2 2 0 0 0 2 2h16v-5"/><path d="M18 12a2 2 0 0 0 0 4h4v-4Z"/></svg>`;
---

<DocsLayout
  title={`${pageTitle} | Akash Network Documentation`}
  description={pageDescription}
  image="/meta-images/docs.png"
>
  <div class="sticky top-0 z-10 -mt-4 mb-10 h-[130px] bg-background pt-4 md:hidden">
    <div>
      <AlgoliaSearch client:only />
    </div>
    <div class="my-4 border-b"></div>
    <div class="">
      <div class="flex items-center gap-x-3">
        <MobileNav
          client:load
          catName={"API Documentation Getting Started"}
          docsNav={docs}
          pathname={pathname}
        />
      </div>
    </div>
  </div>

  <div class="flex flex-col items-start">
    <h1 class="text-3xl font-bold md:text-4xl lg:text-5xl">
      {pageTitle}
    </h1>
    <p class="mt-6 text-base text-para md:text-lg">{pageDescription}</p>
  </div>

  <!-- Integration Options -->
  <div class="mt-12">
    <h2 class="mb-6 text-2xl font-bold text-foreground md:text-3xl">
      Integration Options
    </h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="rounded-2xl border bg-background2 p-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 rounded-lg border border-paraDark bg-background p-2.5">
            <div set:html={walletIcon} class="h-6 w-6 text-foreground" />
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-foreground">Akash SDK</h3>
            <p class="mt-2 text-sm text-para">
              Full blockchain integration with your own wallet
            </p>
            <div class="mt-4 space-y-2 text-sm text-para">
              <p><strong>Best for:</strong></p>
              <ul class="ml-4 space-y-1">
                <li>• Building deployment automation tools</li>
                <li>• Creating custom deployment workflows</li>
                <li>• Provider management dashboards</li>
                <li>• Monitoring and analytics tools</li>
              </ul>
              <p class="mt-3"><strong>Payment:</strong> AKT or USDC cryptocurrency</p>
            </div>
            <a
              href="/docs/api-documentation/sdk"
              class="mt-4 inline-block text-primary hover:underline"
            >
              Explore SDK →
            </a>
          </div>
        </div>
      </div>

      <div class="rounded-2xl border bg-background2 p-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 rounded-lg border border-paraDark bg-background p-2.5">
            <div set:html={creditCardIcon} class="h-6 w-6 text-foreground" />
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-foreground">Console API</h3>
            <p class="mt-2 text-sm text-para">
              Deploy to Akash using credit cards via REST API
            </p>
            <div class="mt-4 space-y-2 text-sm text-para">
              <p><strong>Best for:</strong></p>
              <ul class="ml-4 space-y-1">
                <li>• Building SaaS platforms</li>
                <li>• Offering deployments to non-crypto users</li>
                <li>• User-friendly deployment interfaces</li>
                <li>• No wallet management overhead</li>
              </ul>
              <p class="mt-3"><strong>Payment:</strong> Credit card (Console handles blockchain)</p>
            </div>
            <a
              href="/docs/api-documentation/console-api"
              class="mt-4 inline-block text-primary hover:underline"
            >
              Explore Console API →
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SDK Documentation -->
  <div class="mt-12">
    <h2 class="mb-6 text-2xl font-bold text-foreground md:text-3xl">
      SDK Documentation
    </h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <SectionCard
        icon={sdkIcon}
        title="SDK Overview"
        description="Official Go and JavaScript/TypeScript SDKs"
        link="/docs/api-documentation/sdk"
      />
      <SectionCard
        icon={rocketIcon}
        title="Quick Start"
        description="Deploy your first application programmatically"
        link="/docs/api-documentation/sdk/quick-start"
      />
      <SectionCard
        icon={bookIcon}
        title="API Reference"
        description="Complete SDK documentation and methods"
        link="/docs/api-documentation/sdk/api-reference"
      />
      <SectionCard
        icon={codeIcon}
        title="Examples"
        description="Code examples for common tasks"
        link="/docs/api-documentation/sdk/examples"
      />
      <SectionCard
        icon={walletIcon}
        title="AuthZ & Fee Grants"
        description="Manage permissions and sponsored transactions"
        link="/docs/api-documentation/sdk/authz-feegrant"
      />
    </div>
  </div>

  <!-- Console API Documentation -->
  <div class="mt-12">
    <h2 class="mb-6 text-2xl font-bold text-foreground md:text-3xl">
      Console API Documentation
    </h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <SectionCard
        icon={apiIcon}
        title="API Overview"
        description="REST API for credit card deployments via Console"
        link="/docs/api-documentation/console-api"
      />
      <SectionCard
        icon={rocketIcon}
        title="Getting Started"
        description="Set up authentication and make your first API call"
        link="/docs/api-documentation/console-api/getting-started"
      />
      <SectionCard
        icon={bookIcon}
        title="API Reference"
        description="Complete endpoint documentation"
        link="/docs/api-documentation/console-api/api-reference"
      />
    </div>
  </div>

  <!-- Need Help Section -->
  <div class="mt-12 mb-16 rounded-2xl border bg-background2 p-8">
    <h2 class="mb-4 text-2xl font-bold text-foreground">Need Help?</h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <a
        href="https://discord.akash.network"
        target="_blank"
        class="flex items-center gap-3 text-primary hover:underline"
      >
        <svg
          class="h-5 w-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"
          ></path>
        </svg>
        <span class="font-medium">Discord - #developers channel</span>
      </a>
      <a
        href="https://github.com/akash-network"
        target="_blank"
        class="flex items-center gap-3 text-primary hover:underline"
      >
        <svg
          class="h-5 w-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        <span class="font-medium">GitHub - Contribute to Akash</span>
      </a>
    </div>
  </div>
</DocsLayout>

