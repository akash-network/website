---
import AlgoliaSearch from "@/components/docs/algolia-search";
import MobileNav from "@/components/docs/mobile-sidebar";
import SectionCard from "@/components/docs/section-card.astro";
import DocsLayout from "@/layouts/docs-layout.astro";
import { generateDocsNav } from "@/lib/docs/generate-nav/docs-nav";
import { getCollection } from "astro:content";

const pathname = new URL(Astro.request.url).pathname;

const docsData = await getCollection("Docs");
const docs = generateDocsNav(docsData);

const pageTitle = "Getting Started for Developers";
const pageDescription =
  "Start building on Akash Network - choose your tools and deploy your first app";

// Icons
const consoleIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M7 7h10"/><path d="M7 12h10"/><path d="M7 17h10"/></svg>`;

const sdkIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`;

const cliIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 17 10 11 4 5"/><line x1="12" x2="20" y1="19" y2="19"/></svg>`;

const rocketIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.25-2 5-2 5s3.75-.5 5-2c.545-.545.93-1.19 1.17-1.87"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/></svg>`;

const bookIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>`;

const codeIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/></svg>`;

// Development Path Cards
const developmentPathCards = [
  {
    icon: consoleIcon,
    title: "Akash Console",
    description:
      "Visual web interface - deploy in minutes with no installation required",
    link: "/docs/developers/deployment/akash-console",
  },
  {
    icon: sdkIcon,
    title: "Akash SDK",
    description: "Programmatic deployments with JavaScript/TypeScript or Go",
    link: "/docs/api-documentation/sdk",
  },
  {
    icon: cliIcon,
    title: "Provider-Services CLI",
    description:
      "Command-line interface for full control and advanced features",
    link: "/docs/developers/deployment/cli/installation-guide",
  },
];

// Quick Start Guides Cards
const quickStartCards = [
  {
    icon: rocketIcon,
    title: "First Deployment in 10 Minutes",
    description: "Deploy your first app on Akash Network",
    link: "/docs/getting-started/quick-start",
  },
  {
    icon: bookIcon,
    title: "Understand the Basics",
    description: "Learn the core concepts behind Akash",
    link: "/docs/getting-started/core-concepts",
  },
  {
    icon: codeIcon,
    title: "SDL Reference",
    description: "Learn the Stack Definition Language",
    link: "/docs/developers/deployment/akash-sdl/syntax-reference",
  },
];

// Development Tools Cards
const developmentToolsCards = [
  {
    icon: sdkIcon,
    title: "JavaScript/TypeScript SDK",
    description: "Official SDK for JavaScript and TypeScript developers",
    link: "/docs/api-documentation/sdk/quick-start",
  },
  {
    icon: sdkIcon,
    title: "Go SDK",
    description: "Official SDK for Go developers",
    link: "/docs/api-documentation/sdk/quick-start",
  },
  {
    icon: codeIcon,
    title: "SDL Examples Library",
    description: "290+ deployment examples for common use cases",
    link: "/docs/developers/deployment/akash-sdl/examples-library",
  },
];

// Help Links
const helpLinks = [
  {
    href: "https://discord.akash.network",
    icon: `<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"></path></svg>`,
    text: "Discord - Get help in #developers",
  },
  {
    href: "https://github.com/akash-network",
    icon: `<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path></svg>`,
    text: "GitHub - Contribute to Akash",
  },
];
---

<DocsLayout
  title={`${pageTitle} | Akash Network Documentation`}
  description={pageDescription}
  image="/meta-images/docs.png"
>
  <div
    class="sticky top-0 z-10 -mt-4 mb-10 h-[130px] bg-background px-5 pt-4 md:hidden"
  >
    <div>
      <AlgoliaSearch client:only />
    </div>
    <div class="my-4 border-b"></div>
    <div class="">
      <div class="flex items-center gap-x-3">
        <MobileNav
          client:load
          catName={"Developers Getting Started"}
          docsNav={docs}
          pathname={pathname}
        />
      </div>
    </div>
  </div>

  <div class="container-reader px-5 md:mt-10">
    <div class="flex flex-col items-start">
      <h1 class="text-3xl font-bold md:text-4xl lg:text-5xl">
        {pageTitle}
      </h1>
      <p class="mt-6 text-base text-para md:text-lg">{pageDescription}</p>
    </div>

    <!-- Choose Your Development Path -->
    <div class="mt-12">
      <h2 class="mb-6 text-2xl font-bold text-foreground md:text-3xl">
        Choose Your Development Path
      </h2>
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
        {
          developmentPathCards.map((card) => (
            <SectionCard
              icon={card.icon}
              title={card.title}
              description={card.description}
              link={card.link}
            />
          ))
        }
      </div>
    </div>

    <!-- Quick Start Guides -->
    <div class="mt-12">
      <h2 class="mb-6 text-2xl font-bold text-foreground md:text-3xl">
        Quick Start Guides
      </h2>
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
        {
          quickStartCards.map((card) => (
            <SectionCard
              icon={card.icon}
              title={card.title}
              description={card.description}
              link={card.link}
            />
          ))
        }
      </div>
    </div>

    <!-- Development Tools -->
    <div class="mt-12">
      <h2 class="mb-6 text-2xl font-bold text-foreground md:text-3xl">
        Development Tools
      </h2>
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
        {
          developmentToolsCards.map((card) => (
            <SectionCard
              icon={card.icon}
              title={card.title}
              description={card.description}
              link={card.link}
            />
          ))
        }
      </div>
    </div>

    <!-- Need Help Section -->
    <div
      class="mb-16 mt-12 rounded-lg border border-[#e6e8eb] bg-[#f8f9fa] p-8 dark:border-[#333] dark:bg-[#1a1a1a]"
    >
      <h2 class="mb-4 text-xl font-semibold text-[#11181c] dark:text-white">
        Need Help?
      </h2>
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
        {
          helpLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              class="flex items-center gap-3 text-[#ff414c] hover:underline"
            >
              <Fragment set:html={link.icon} />
              <span class="font-medium">{link.text}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</DocsLayout>
