---
import ResourcesCard from "@/components/brand-pages/resources-card.astro";
import Layout from "@/layouts/layout.astro";
import { getEntry } from "astro:content";

const brandReleasesInsightsPage = await getEntry(
  "Brand_Releases_Insights_Homepage",
  "index"
);

const { title, description, cards } = brandReleasesInsightsPage.data;
---

<Layout title="Insights">
  <div class="container mt-10 space-y-4">
    <h1
      class="text-[24px] font-bold leading-[34px] md:text-3lg md:leading-[62.4px]"
    >
      {title}
    </h1>
    <p
      class="max-w-[800px] text-sm leading-[20px] md:text-lg md:leading-[30px]"
    >
      {description}
    </p>
  </div>

  <div class="container mt-10 lg:mt-20">
    <div class="flex w-full flex-col divide-y border-y">
      {
        cards.map((card) => (
          <ResourcesCard
            title={card.title}
            description={card.description}
            buttons={[card.button]}
            image={card.image}
          />
        ))
      }
    </div>
  </div>
</Layout>
